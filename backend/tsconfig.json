{
  "compilerOptions": {
    /* Base Options */
    "target": "es2016",
    "module": "commonjs",             
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",

    /* Strictness */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* The Fix for your error */
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}